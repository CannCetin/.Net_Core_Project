<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

<div class="comment-top">
	<h4>Yorum Bırakın</h4>
	<div class="comment-bottom">
		<form action="/Comment/PartialAddComment/" method="post">
			<input class="form-control" type="text" id="txtName" name="CommentUserName" placeholder="Adınız Soyadınız" required="">
            <input class="form-control" type="text" id="txtTitle" name="CommenTitle" placeholder="Konu" required="">
            <input class="form-control" type="text" id="txtBlogId" name="BlogID" value="@ViewBag.BlogId" hidden>
            <textarea class="form-control" id="txtContent" name="CommentContent" placeholder="Yorumunuz..." required=""></textarea>
			<button type="submit" id="btn" class="btn btn-primary submit">Yorum Yap</button>
		</form>
	</div>
</div>
<script>
    $(document).ready(function () {

        $("#btn").click(function () {

            let inputData = {
                CommentUserName: $("#txtName").val(),
                CommenTitle: $("#txtTitle").val(),
                BlogID: $("#txtBlogId").val(),
                CommentContent: $("#txtContent").val(),
            };


            $.ajax({
                type: "post",
                url: "/Comment/PartialAddComment/",
                data: { p: inputData },
                success: function (func) {
                    let result = jQuery.parseJSON(func);
                    alert("Başarıyla Kayıt Olunmuştur");
                }
            });
        });
    });
</script>