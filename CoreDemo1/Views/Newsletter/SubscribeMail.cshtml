<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>



<div class="tech-btm">
    <h3>Mail Bültenine Abone Olun</h3>
    <form method="post" class="subscribe_form">
        <input class="tech-btm" type="email" id="txtmail">
        <input type="submit" id="btn1" value="Abone Ol" />
    </form>
</div>

<script>
    $(document).ready(function () {

        $("#btn1").click(function () {

            let inputData = {
                Mail: $("#txtmail").val()
            };


            $.ajax({
                type: "POST",
                url: "/Newsletter/SubscribeMail/",
                data: { p: inputData },
                success: function (func) {
                    alert("Başarıyla Kayıt Olunmuştur");
                }
            });
        });
    });
</script>
